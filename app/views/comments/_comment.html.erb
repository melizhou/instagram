
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<p>
<% if current_user.id == comment.user_id %>
<%= link_to 'Edit', edit_photo_comment_path(comment.photo, comment) %>
  <%= link_to 'Delete', [comment.photo, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
<% end %>

</p>

